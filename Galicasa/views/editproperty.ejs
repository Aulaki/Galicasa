<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Galicasa</title>
    <link rel="stylesheet" href="/stylesheets/editproperty.css" />
    <%- include('./modules/links') %>
  </head>
  <body>
    <header><%- include('./modules/navbarlog') %></header>
    <main class="d-flex justify-content-center align-items-center">
          <div class="container-xxl">
            <div class="formbox">
              <form
                class="row g-3"
                action="/property/edit/<%= id %>"
                method="post"
                enctype="multipart/form-data"
              >
                <div class="col-md-8">
                  <label for="inputAddress" class="form-label">Direcci칩n</label>
                  <input
                    type="text"
                    class="form-control"
                    id="inputAddress"
                    placeholder="1234 Main St"
                    name="address"
                    value="<%= result[0].address %>"
                    disabled
                  />
                </div>
                <div class="col-md-4">
                  <label for="inputCity" class="form-label">Concello</label>
                  <input
                    type="text"
                    class="form-control"
                    id="inputCity"
                    name="city"
                    value="<%= result[0].city %>"
                    disabled
                  />
                </div>
                <div class="col-md-3">
                  <label for="inputArea" class="form-label"
                    >Metros construidos</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="inputArea"
                    name="area"
                    value="<%= result[0].area %>"
                    disabled
                  />
                </div>
                <div class="col-md-3">
                  <label for="inputYear" class="form-label"
                    >A침o de construcci칩n</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="inputYear"
                    name="year"
                    value="<%= result[0].construction_year %>"
                    disabled
                  />
                </div>
                <div class="col-md-3">
                  <label for="inputPrice" class="form-label">Precio</label>
                  <input
                    type="text"
                    class="form-control"
                    id="inputPrice"
                    name="price"
                    value="<%= result[0].price %>"
                  />
                </div>
                <div class="col-md-3">
                  <label for="inputDiscount" class="form-label">% Descuento</label>
                  <input
                    type="text"
                    class="form-control"
                    id="inputDiscount"
                    name="discount"
                    value="<%= result[0].discount %>"
                  />
                </div>
                <div class="mb-3">
                  <label for="exampleFormControlTextarea1" class="form-label"
                    >Informaci칩n adicional</label
                  >
                  <textarea
                    class="form-control"
                    id="exampleFormControlTextarea1"
                    rows="3"
                    maxlength="255"
                    name="about"
                  ><%= result[0].description %></textarea
                  >
                </div>

                <div class="mb-3">
                  <input class="form-control" type="file" id="formFile" />
                </div>
                <div class="col-12">
                  <button type="submit" class="btn">Guardar</button>
                </div>
              </form>
          </div>
      </div>
    </main>
    <footer><%- include('./modules/footer') %></footer>
  </body>
</html>
